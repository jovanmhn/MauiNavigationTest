             x:Class="MauiNavigationTest.Pages.SecondPage"
             Title="SecondPage">
    <Grid ColumnDefinitions="1*,3*,1*">
        <VerticalStackLayout Grid.Column="1" VerticalOptions="Center">


            <Label 
            Text="This is my second page. Notice how both the nav back button, as well as the android back button take you back to the first page. Makes perfect sense so far."
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            Grid.Column="1"/>
            <Label 
            Text=""
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            Grid.Column="1"/>

            <Button Text="Go to the third and final page!" VerticalOptions="Center" HorizontalOptions="Center" Clicked="Button_Clicked"></Button>
        </VerticalStackLayout>
    </Grid>
    
</ContentPage>